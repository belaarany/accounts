{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "build",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
  },
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.test.ts"
  ],
  "include": [
      "src/**/*.ts"
  ]
}